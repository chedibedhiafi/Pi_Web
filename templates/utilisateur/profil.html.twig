                    <div class="col-md-12"><label class="labels">Login</label><input disabled type="text" class="form-control" name="login" placeholder="{{app.user.username}}" value=""></div>
                    <div class="col-md-12"><label class="labels">Date de naissance</label><input disabled type="text" class="form-control" name="dateN" placeholder="{{app.user.dateNaissance|date("m/d/Y")}}"></div>
                    <div class="col-md-12"><label class="labels">Adresse mail</label><input disabled type="text" class="form-control" name="email" placeholder="{{app.user.email}}" value=""></div>
                </div>
                <div class="mt-5 text-center"><button type="submit" class="btn btn-primary profile-button">Enregistrer</button></div>
