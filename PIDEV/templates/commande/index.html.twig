{% extends 'base.html.twig' %}

{% block title %}Commande {% endblock %}

{% block body %}
    <h1>Commande </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_creation</th>
                <th>Date_envoie</th>
                <th>Total</th>
                <th>Tva</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.dateCreation ? commande.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ commande.dateEnvoie ? commande.dateEnvoie|date('Y-m-d') : '' }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.tva }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
